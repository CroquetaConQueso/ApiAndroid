<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdminMapaActivity" />

    <ImageView
        android:id="@+id/btnVolverMapa"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:src="@android:drawable/ic_menu_revert"
        android:background="@drawable/bg_btn_pop_action"
        android:backgroundTint="@color/white"
        android:padding="12dp"
        app:tint="@color/black"
        android:elevation="10dp"
        android:contentDescription="Volver atrás"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONFIGURAR ZONA DE FICHAJE"
                android:fontFamily="sans-serif-black"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mantén pulsado en el mapa para mover la sede."
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginBottom="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Radio:"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvRadioValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 m"
                    android:textStyle="bold"
                    android:textColor="@color/pop_pink"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="10"
                android:valueTo="500"
                android:value="50"
                android:stepSize="10"
                android:contentDescription="Ajustar radio de fichaje en metros"/> <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGuardarMapa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="GUARDAR CAMBIOS"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_pop_action"
            android:backgroundTint="@color/pop_green"
            android:layout_marginTop="10dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>