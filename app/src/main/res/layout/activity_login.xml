<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pop_yellow"
    android:padding="30dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_pop_white"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvLoginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACCESO RRHH"
            android:fontFamily="sans-serif-black"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/lblEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIF / EMAIL"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/etNifLogin"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etNifLogin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bg_pop_input"
            android:hint="Ej: 12345678Z"
            android:inputType="text"
            android:textColor="@color/black"
            android:paddingHorizontal="15dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvLoginTitle"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/lblPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTRASEÑA"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/etPassLogin"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etPassLogin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bg_pop_input"
            android:hint="******"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:paddingHorizontal="15dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toBottomOf="@+id/etNifLogin"
            android:layout_marginTop="25dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ENTRAR"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_pop_action"
            android:backgroundTint="@color/black"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/etPassLogin"/>

        <TextView
            android:id="@+id/tvForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Olvidaste tu contraseña?"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>