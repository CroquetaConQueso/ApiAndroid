<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pop_purple"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RRHH FLASK"
        android:fontFamily="sans-serif-black"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:letterSpacing="0.1"
        android:shadowColor="@color/black"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/btnLogoutIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_lock_power_off"
        app:tint="@color/white"
        android:background="@drawable/bg_btn_pop_action"
        android:backgroundTint="@color/pop_red"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvAppTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvAppTitle"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardResumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_pop_white"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvAppTitle">

        <TextView
            android:id="@+id/lblSaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SALDO MENSUAL"
            android:textStyle="bold"
            android:textSize="12sp"
            android:background="@color/black"
            android:textColor="@color/pop_yellow"
            android:paddingHorizontal="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvSaldoHoras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-- h"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lblSaldo"/>

        <Button
            android:id="@+id/btnVerDetalleHoras"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="VER DETALLES"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="@color/pop_cyan"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFicharMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="FICHAR\nENTRADA"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/bg_btn_pop_action"
        android:backgroundTint="@color/pop_green"
        android:gravity="center"
        android:layout_marginVertical="30dp"
        app:layout_constraintTop_toBottomOf="@id/cardResumen"
        app:layout_constraintBottom_toTopOf="@id/gridMenu"
        app:layout_constraintVertical_weight="1"/>

    <GridLayout
        android:id="@+id/gridMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnIncidencia"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:text="SOLICITAR\nBAJA/VACACIONES"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/bg_btn_pop_action"
            android:backgroundTint="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHistorial"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_marginStart="10dp"
            android:text="HISTORIAL\nSOLICITUDES"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/bg_btn_pop_action"
            android:backgroundTint="@color/white"/>

    </GridLayout>

    <TextView
        android:id="@+id/linkCambiarClave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar ContraseÃ±a"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>