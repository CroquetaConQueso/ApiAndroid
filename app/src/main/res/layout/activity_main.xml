<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pop_purple"
    android:padding="20dp">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CONTROL PRESENCIA"
            android:fontFamily="sans-serif-black"
            android:textSize="22sp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/btnLogoutIcon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@android:drawable/ic_lock_power_off"
            app:tint="@color/white"
            android:background="@drawable/bg_btn_pop_action"
            android:backgroundTint="@color/pop_red"
            android:padding="10dp"/>
    </LinearLayout>

    <!-- CARD HORAS EXTRA -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardHorasExtra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_pop_white"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer">

        <!-- TÃTULO -->
        <TextView
            android:id="@+id/lblTituloExtra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HORAS EXTRA (MES ACTUAL)"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textSize="14sp"
            android:background="@color/black"
            android:textColor="@color/pop_yellow"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- BADGE REVISIÃ“N (NO habla de saldo) -->
        <TextView
            android:id="@+id/tvBadgeRevision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REVISIÃ“N"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:background="@color/pop_yellow"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- VALOR PRINCIPAL: HORAS EXTRA -->
        <TextView
            android:id="@+id/tvHorasExtraValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-- h"
            android:fontFamily="sans-serif-black"
            android:textSize="42sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lblTituloExtra"
            android:layout_marginTop="8dp"/>

        <!-- ESTADO (sin â€œdebes a la empresaâ€) -->
        <TextView
            android:id="@+id/tvEstadoHoras"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Calculando..."
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHorasExtraValor"/>

        <!-- (OPCIONAL) Texto pequeÃ±o para explicar revisiÃ³n -->
        <TextView
            android:id="@+id/tvInfoRevision"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hay dÃ­as con fichajes incompletos. Pulsa para verlos."
            android:textSize="12sp"
            android:textColor="@color/black"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEstadoHoras"
            android:layout_marginTop="6dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- BOTÃ“N CENTRAL FICHAR -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFicharMain"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:text="FICHAR\nENTRADA"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:cornerRadius="100dp"
        app:strokeColor="@color/black"
        app:strokeWidth="4dp"
        android:elevation="8dp"
        android:backgroundTint="@color/pop_green"
        app:layout_constraintTop_toBottomOf="@id/cardHorasExtra"
        app:layout_constraintBottom_toTopOf="@id/gridActions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- GRID ACCIONES -->
    <GridLayout
        android:id="@+id/gridActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnIncidencia"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:text="SOLICITAR\nBAJA/VAC."
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/bg_btn_pop_action"
            android:backgroundTint="@color/pop_yellow"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHistorial"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:text="ESTADO\nSOLICITUDES"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/bg_btn_pop_action"
            android:backgroundTint="@color/pop_cyan"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMisFichajes"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:text="MIS\nFICHAJES"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_pop_action"
            android:backgroundTint="#E91E63"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCambiarClave"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:text="CAMBIAR\nCLAVE"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_pop_action"
            android:backgroundTint="@color/pop_orange"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAdminPanel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="5dp"
            android:text="ðŸ›   PANEL DE ADMINISTRADOR"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_pop_action"
            android:backgroundTint="@color/black"
            android:visibility="gone"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
